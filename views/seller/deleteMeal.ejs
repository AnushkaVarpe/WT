.meal-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
  gap: 1.5rem;
}

.meal-box {
  background: #fff;
  border-radius: 8px;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  padding: 1rem;
  text-align: left;
}

.meal-box h2 {
  font-size: 1.5rem;
  margin-bottom: 1rem;
}

.meal-box p {
  margin-bottom: 0.5rem;
}

.meal-box strong {
  color: #444;
}

.meal-container {
display: flex;
flex-wrap: wrap;
gap: 1.5rem;
}

.meal-card {margin-left: 17px;
background: #f9f9f9;
border: 1px solid #ddd;
border-radius: 8px;
padding: 1rem;
width: calc(33% - 2rem); 
height: 350px;
box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.meal-card h2 {
margin: 0;
font-size: 1.5rem;
}

.meal-card p {
margin: 0.5rem 0;
}

.meal-actions {
margin-top: 50px !important;
display: flex;
gap: 20px; 
margin-top: 10px;
}

.meal-actions form {
margin: 0;
}

.meal-actions button {
padding: 4px 6px;
border: none;
background-color: #007bff;
color: white;
border-radius: 3px;
cursor: pointer;
}

.meal-actions button:hover {
background-color: #0056b3;
}